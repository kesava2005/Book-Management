    {
      "name": "Books",
      "item": [
        {
          "name": "Get All Books",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/books?page=1&limit=5",
              "host": ["{{base_url}}"],
              "path": ["books"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "5"}
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Book",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/books",
              "host": ["{{base_url}}"],
              "path": ["books"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Sample Book\",\n  \"author\": \"Author Name\",\n  \"genre\": \"Fiction\",\n  \"year\": 2024\n}"
            }
          },
          "response": []
        },
        {
          "name": "Get Book By ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/books/{{bookId}}",
